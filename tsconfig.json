{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "outDir": "dist/",
    "rootDir": "."
  },
  "include": ["server/**/*.ts", "bin/**/*.ts"],
  "exclude": ["public/", "test/", "node_modules/", "dist/"]
}
